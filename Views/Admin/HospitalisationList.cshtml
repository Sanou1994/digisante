                                        <th>Date entrée</th>
                                        <th>Date sortie</th>
                                        <th>Etat</th>
                                        <th></th>
                                        <th>Action</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var a in Model.Item1)
                                    {
                                        <tr>
                                            <td style="color:black">
                                                @a.hospitalisationID

                                            </td>

                                            <td style="color:black">
                                                @a.date_entree.ToString().Substring(0, 10)
                                            </td>
                                            <td style="color:black">
                                                @if (a.date_sortie != null)
                                                {
                                                    <span>@a.date_sortie.ToString().Substring(0, 10)</span>

                                                }
