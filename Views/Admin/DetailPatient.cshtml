    {
        
        document.getElementById("smsM").innerText=null
        document.getElementById("messageM").innerText = null

        $.post('@Url.Action("modifierPatient")',
            {
                Accompagner: $('#AccompagnerM').val(),
                Name: $('#NameM').val(),
                Surname: $('#SurnameM').val(),
                Gender: $('#GenderM').val(),
                Birth: $('#myDateM').val(),
